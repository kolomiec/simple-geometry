<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
            android:title="Appearance"
            android:key="appearance">

        <CheckBoxPreference
                android:title="Coordinate System"
                android:defaultValue="true"
                android:key="checkBox_coordSystem"
                android:summary="Turn on/off coordinate system"/>
        <ListPreference
                android:title="Theme"
                android:key="list_themes"
                android:summary="Choose color theme"
                android:entries="@array/list"
                android:entryValues="@array/lValues"
                android:defaultValue="0">
        </ListPreference>
    </PreferenceCategory>
    <PreferenceCategory
            android:title="Features"
            android:key="features">

        <CheckBoxPreference
                android:title="Zoom"
                android:defaultValue="true"
                android:key="checkBox_zoom"
                android:summary="Turn on/off zoom"/>
        <CheckBoxPreference
                android:title="Turn"
                android:defaultValue="true"
                android:key="checkBox_turn"
                android:summary="Turn on/off turn"/>
    </PreferenceCategory>
    <PreferenceCategory
            android:title="Locale"
        android:key="locale">
        <ListPreference
                android:title="Language"
                android:key="list_lang"
                android:summary="Choose english language"
                android:entries="@array/langList"
                android:entryValues="@array/langValues"
                android:defaultValue="0">
        </ListPreference>
    </PreferenceCategory>
</PreferenceScreen>